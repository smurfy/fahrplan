<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>de.smurfy.fahrplan</id>
    <author>smurfy (maemo@smurfy.de)</author>
    <publisher>Oleksii Serdiuk</publisher>
    <authorId>gYAAgFEzqeGb8kgSIn13NIOmc_c</authorId>
    <name>Fahrplan</name>
    <versionNumber>2.0.14</versionNumber>
    <buildId>1</buildId>
    <description>A Journey planner/Railway Time table for many train lines in Europe and Australia</description>
    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>true</autoOrients>
        <aspectRatio>portrait</aspectRatio>
    </initialWindow>
    <env value="app/native/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/plugins:/usr/lib/qt4/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib:/usr/lib/qt4/lib/" var="LD_LIBRARY_PATH"/>

    <action system="true">run_native</action>
    <permission>access_internet</permission>
    <permission>read_geolocation</permission>
    <permission>access_pimdomain_calendars</permission>

    <asset path="fahrplan2" type="Qnx/Elf" entry="true">fahrplan2</asset>

    <!-- These values will be replaced when deploying in Qt Creator -->
    <asset path="%SRC_DIR%/3rdparty/bb10-qt-components/imports">imports</asset>
    <asset path="%SRC_DIR%/data/fahrplan2_150.png">fahrplan2.png</asset>
    <asset path="%SRC_DIR%/data/splash_bb10_720.png">splash_720_720.png</asset>
    <asset path="%SRC_DIR%/data/splash_bb10_768.png">splash_768_1280.png</asset>
    <asset path="%SRC_DIR%/data/splash_bb10_1280.png">splash_1280_768.png</asset>

    <icon>
        <image>fahrplan2.png</image>
    </icon>
    <splashScreens>
        <image>splash_720_720.png</image>
        <image>splash_768_1280.png</image>
        <image>splash_1280_768.png</image>
    </splashScreens>
</qnx>
